<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TransitionActivity"
    android:gravity="center"
    android:background="@drawable/back_color_trans">

    <TextView
        android:gravity="center"
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="HOŞ GELDİNİZ"
        android:textColor="@color/colorWhite"
        />

    <Button
        android:id="@+id/t_task"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/buton_back_corner"
        android:hint="Görev Atama"
        android:textColorHint="@color/colorGreen" />

    <Button
        android:id="@+id/t_user"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buton_back_corner"
        android:hint="Kişi Ekleme"
        android:textColorHint="@color/colorGreen" />

    <Button
        android:id="@+id/t_tasksc"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buton_back_corner"
        android:hint="Görev Sayfası"
        android:textColorHint="@color/colorGreen" />
    <Button
        android:id="@+id/t_tasksc2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/buton_back_corner"
        android:hint="Wekkly scrum"
        android:textColorHint="@color/colorGreen" />


</LinearLayout>